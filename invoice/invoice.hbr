<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            line-height: 1.6;
            margin: 0;
            padding: 20px;
        }
        .invoice-body {
            margin-top: 20px;
        }
        
        /* Client & Company Info Sections */
        .info-columns {
            display: flex;
            justify-content: space-between;
            margin-bottom: 40px;
        }
        .info-col {
            width: 48%;
        }
        .info-label {
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #95a5a6;
            margin-bottom: 8px;
            font-weight: 600;
        }
        .info-content {
            font-size: 14px;
        }
        .info-content strong {
            display: block;
            font-size: 16px;
            margin-bottom: 4px;
            color: #2c3e50;
        }
        
        /* Items Table */
        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }
        .items-table th {
            text-align: left;
            padding: 12px 15px;
            background-color: #f8f9fa;
            color: #2c3e50;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-bottom: 2px solid #ddd;
        }
        .items-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #eee;
            font-size: 14px;
        }
        .items-table th.text-right, .items-table td.text-right {
            text-align: right;
        }
        .items-table tr:last-child td {
            border-bottom: none;
        }
        
        /* Totals Section */
        .totals-section {
            width: 300px;
            margin-left: auto;
        }
        .total-row {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            font-size: 14px;
        }
        .total-row.final {
            border-top: 2px solid #34495e;
            margin-top: 10px;
            padding-top: 15px;
            font-weight: bold;
            font-size: 18px;
            color: #2c3e50;
        }
        .total-label {
            color: #7f8c8d;
        }
        .total-row.final .total-label {
            color: #2c3e50;
        }
        
        .currency-symbol {
            font-size: 0.9em;
            color: #7f8c8d;
            margin-right: 2px;
        }
    </style>
</head>
<body>
    <div class="invoice-body">
        
        <!-- Info Columns -->
        <div class="info-columns">
            <div class="info-col">
                <div class="info-label">Bill From</div>
                <div class="info-content">
                    <strong>{{company.name}}</strong>
                    <div>{{company.address}}</div>
                    <div>{{company.email}}</div>
                    <div>{{company.phone}}</div>
                </div>
            </div>
            <div class="info-col">
                <div class="info-label">Bill To</div>
                <div class="info-content">
                    <strong>{{client.name}}</strong>
                    <div>{{client.address}}</div>
                    <div>Attn: {{client.contactPerson}}</div>
                    <div>{{client.email}}</div>
                </div>
            </div>
        </div>
        
        <!-- Items Table -->
        <table class="items-table">
            <thead>
                <tr>
                    <th style="width: 40%">Description</th>
                    <th class="text-right" style="width: 15%">Quantity</th>
                    <th class="text-right" style="width: 15%">Price</th>
                    <th class="text-right" style="width: 15%">Tax</th>
                    <th class="text-right" style="width: 15%">Total</th>
                </tr>
            </thead>
            <tbody>
                {{#each items}}
                <tr>
                    <td>{{description}}</td>
                    <td class="text-right">{{quantity}}</td>
                    <td class="text-right">{{../invoice.currency}} {{price}}</td>
                    <td class="text-right">{{../invoice.currency}} {{tax}}</td>
                    <td class="text-right"><strong>{{../invoice.currency}} {{total}}</strong></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        
        <!-- Totals -->
        <div class="totals-section">
            <div class="total-row">
                <span class="total-label">Subtotal</span>
                <span>{{invoice.currency}} {{totals.subtotal}}</span>
            </div>
            <div class="total-row">
                <span class="total-label">Tax</span>
                <span>{{invoice.currency}} {{totals.taxTotal}}</span>
            </div>
            {{#if totals.discount}}
            <div class="total-row">
                <span class="total-label">Discount</span>
                <span>- {{invoice.currency}} {{totals.discount}}</span>
            </div>
            {{/if}}
            <div class="total-row final">
                <span class="total-label">Grand Total</span>
                <span>{{invoice.currency}} {{totals.grandTotal}}</span>
            </div>
        </div>
    </div>
</body>
</html>
